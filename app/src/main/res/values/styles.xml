<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#090909</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="themeDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
    </style>

    <style name="Resultados" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/koho</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:layout_margin">@dimen/def_margin</item>
        <item name="android:textSize">@dimen/label_size</item>
    </style>

    <style name="Rotulos" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/koho_negrito</item>
        <item name="android:textColor">@color/colorLabel</item>
        <item name="android:textSize">@dimen/label_size</item>
    </style>

    <style name="Titulos" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/koho_negrito</item>
        <item name="android:textColor">@color/colorLabel</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="RotulosSimples" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/koho</item>
        <item name="android:textColor">@color/colorLabel</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CampoDecimal" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/koho</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:padding">@dimen/def_margin</item>
        <item name="android:background">@drawable/background</item>
    </style>

    <style name="CampoTexto" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/koho</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">@dimen/def_margin</item>
        <item name="android:background">@drawable/background</item>
    </style>

    <style name="BotaoPrimario" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/koho_negrito</item>
        <item name="android:layout_margin">@dimen/def_margin</item>
        <item name="android:background">@color/colorPrimaryButton</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>


    <style name="BotaoExcluir" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/koho_negrito</item>
        <item name="android:layout_margin">@dimen/def_margin</item>
        <item name="android:background">@color/colorRed</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="BotaoLimparDados" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/koho_negrito</item>
        <item name="android:layout_margin">@dimen/def_margin</item>
        <item name="android:background">@color/colorPrimaryButton</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="name">name_beer</style>


</resources>