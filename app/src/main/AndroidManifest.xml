<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.beercalc">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.example.beercalc.view.CadBebidasActivity"
            android:label="Cadastro"/>

        <activity
            android:name="com.example.beercalc.view.SplashActivity$SplashDevMedia">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.beercalc.view.CalculadoraQuantActivity"
            android:label="@string/title_activity_calculadoraQuant" />

        <activity
            android:name="com.example.beercalc.view.CalculadoraMLActivity"
            android:label="@string/title_activity_calculadoraML" />

        <activity
            android:name="com.example.beercalc.view.ListaBebidasActivity"
            android:label="@string/title_activity_cadastro" />

        <activity android:name="com.example.beercalc.view.MenuPrincipalActivity"/>

    </application>

</manifest>